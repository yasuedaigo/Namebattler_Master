package masternamebattler.Magic;

import masternamebattler.Condition.Conditions;

public enum MagicType {
    FIRE("ファイア", 10, null, 30, 10),
    THUNDER("サンダー", 20, Conditions.PARALYSIS, 25, 15),
    ICE("アイス", 15, null, 20, 5),
    HEAL("ヒール", 5, null, 0, -30);

    private final String displayName;
    private final int consumptionMp;
    private final Conditions grantCondition;
    private final int maxDamage;
    private final int minDamage;

    MagicType(String displayName, int consumptionMp, Conditions grantCondition, int maxDamage, int minDamage) {
        this.displayName = displayName;
        this.consumptionMp = consumptionMp;
        this.grantCondition = grantCondition;
        this.maxDamage = maxDamage;
        this.minDamage = minDamage;
    }

    public String getDisplayName() {
        return displayName;
    }

    public int getConsumptionMp() {
        return consumptionMp;
    }

    public Conditions getGrantCondition() {
        return grantCondition;
    }

    public int getMaxDamage() {
        return maxDamage;
    }

    public int getMinDamage() {
        return minDamage;
    }

    /*
    public Magic createMagic() {
        return new Magic(displayName, consumptionMp, grantCondition, maxDamage, minDamage);
    }
     */
}
